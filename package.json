{
  "name": "@wealthsimple/async-action-ts",
  "version": "5.3.3",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "check_types": "tsc",
    "lint": "eslint 'src/*'",
    "lint:js": "eslint 'src/*'",
    "lint:css": "echo 'No CSS in this repo.'",
    "security": "yarn audit",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "prettier": "prettier --write \"./+(src)/**/*.ts\"",
    "cdc": "madge --no-spinner --exclude .yarn-cache --circular src",
    "prebuild": "rm -rf dist",
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "yarn build"
  },
  "author": "sdavenport@wealthsimple.com",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/git": "^9.0.0",
    "@types/eslint": "^7.2.6",
    "@types/eslint-config-prettier": "^6.11.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^26.0.20",
    "@types/prettier": "^2.1.6",
    "@types/pretty-quick": "^2.0.0",
    "@types/semantic-release": "^17.2.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-junit": "^11.1.0",
    "madge": "^3.12.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^2.0.2",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "semantic-release": "^17.2.4",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3",
    "yarn-deduplicate": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "release": {
    "branches": [
      {
        "name": "typescript-releases"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "eslint": "^7.18.0"
  }
}
